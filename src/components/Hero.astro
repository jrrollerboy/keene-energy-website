// Hero section - exact Diesel Dudes layout and styling
---

<section class="relative h-screen bg-gray-900">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <!-- Placeholder background - would be replaced with commercial solar image -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-600 to-gray-800"></div>
    <div class="absolute inset-0 flex items-center justify-center opacity-10">
      <div class="text-center text-gray-400">
        <div class="text-9xl mb-4">üè¢‚ö°</div>
        <p class="text-3xl font-bold">[Commercial Solar Background Image]</p>
      </div>
    </div>
    <!-- Dark overlay like Diesel Dudes -->
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  </div>
  
  <div class="relative z-10 h-full flex items-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="max-w-2xl">
        <!-- Main Headline - Exact Diesel Dudes Typography -->
        <h1 class="text-white mb-6">
          <div class="text-6xl sm:text-7xl lg:text-8xl font-black leading-none mb-4">
            Commercial Solar
          </div>
          <div class="text-4xl sm:text-5xl lg:text-6xl font-black leading-none">
            & Electrical Contractor
          </div>
        </h1>
        
        <!-- Subheading -->
        <p class="text-2xl sm:text-3xl text-white font-medium mb-8 leading-relaxed">
          Professional Installation & Service for Southern California Businesses
        </p>
        
        <!-- Trust badges -->
        <div class="flex flex-wrap items-center gap-6 mb-12 text-white text-lg">
          <span class="flex items-center font-semibold">
            <svg class="w-6 h-6 mr-2 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            30+ Years Experience
          </span>
          <span class="flex items-center font-semibold">
            <svg class="w-6 h-6 mr-2 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Licensed & Insured
          </span>
        </div>
        
        <!-- CTA Buttons - Exact Diesel Dudes Style -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="tel:+19498778008" 
            style="background-color: #d49f42;"
            class="inline-flex items-center justify-center px-8 py-4 text-white font-bold text-xl rounded-lg hover:opacity-90 transition-all uppercase tracking-wide"
          >
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
