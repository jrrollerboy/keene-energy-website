---
// Header component with logo and prominent phone CTA
---

<header class="bg-white shadow-sm border-b border-brand-light-gray sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img 
            src="/src/assets/keen-energy-logo.svg" 
            alt="Keene Energy - Commercial Solar & Electrical Contractor" 
            class="h-12 w-auto"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/services" class="text-brand-dark-gray hover:text-brand-dark-blue font-medium transition-colors">
          Services
        </a>
        <a href="/about" class="text-brand-dark-gray hover:text-brand-dark-blue font-medium transition-colors">
          About
        </a>
        <a href="/contact" class="text-brand-dark-gray hover:text-brand-dark-blue font-medium transition-colors">
          Contact
        </a>
      </nav>
      
      <!-- Phone CTA -->
      <div class="flex items-center space-x-4">
        <a 
          href="tel:+1234567890" 
          class="phone-cta text-lg font-semibold hover:underline"
          aria-label="Call Keene Energy"
        >
          ðŸ“ž (123) 456-7890
        </a>
        <a 
          href="/contact" 
          class="btn-primary hidden sm:inline-block"
        >
          Get Free Estimate
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden p-2" aria-label="Open mobile menu">
        <svg class="w-6 h-6 text-brand-dark-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>