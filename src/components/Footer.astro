          <a 
            href="mailto:info@keenenergyusa.com" 
            class="flex items-center text-gray-300 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            info@keenenergyusa.com
          </a>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-black text-lg mb-4">Services</h4>
        <ul class="space-y-2">
          <li><a href="/services/commercial-solar" class="text-gray-300 hover:text-white transition-colors">Commercial Solar</a></li>
          <li><a href="/services/battery-storage" class="text-gray-300 hover:text-white transition-colors">Battery Storage</a></li>
          <li><a href="/services/ev-charging" class="text-gray-300 hover:text-white transition-colors">EV Charging</a></li>
          <li><a href="/services/electrical" class="text-gray-300 hover:text-white transition-colors">Electrical Upgrades</a></li>
          <li><a href="/services/design" class="text-gray-300 hover:text-white transition-colors">Design & Engineering</a></li>
          <li><a href="/services/maintenance" class="text-gray-300 hover:text-white transition-colors">Maintenance</a></li>
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h4 class="font-black text-lg mb-4">Company</h4>
        <ul class="space-y-2">
          <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About Us</a></li>
          <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
          <li><a href="/projects" class="text-gray-300 hover:text-white transition-colors">Projects</a></li>
          <li><a href="/blog" class="text-gray-300 hover:text-white transition-colors">Resources</a></li>
        </ul>
        
        <!-- Service Areas -->
        <div class="mt-6">
          <h5 class="font-black mb-3">Service Areas</h5>
          <div class="text-sm text-gray-300">
            <p>Orange County • Los Angeles</p>
